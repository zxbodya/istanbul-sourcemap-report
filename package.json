{
  "name": "istanbul-sourcemap-report",
  "version": "0.1.0",
  "description": "Utility to generate coverage reports for sources from compiled code coverage using SourceMaps",
  "keywords": [
    "source-map",
    "istanbul",
    "coverage"
  ],
  "author": "Bogdan Savluk <savluk.bogdan@gmail.com>",
  "contributors": [
    {
      "name": "kitsonk",
      "email": "me@kitsonkelly.com"
    },
    {
      "name": "bryanforbes",
      "email": "bryan@reigndropsfall.net"
    }
  ],
  "bugs": {
    "url": "https://github.com/zxbodya/istanbul-sourcemap-report"
  },
  "license": "BSD-3-Clause",
  "main": "./lib/index.js",
  "jsnext:main": "./src/index.js",
  "bin": {
    "istanbul-sourcemap-report": "./lib/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zxbodya/istanbul-sourcemap-report.git"
  },
  "scripts": {
    "lint": "eslint ./src/",
    "test": "rimraf tmp && mkdirp tmp && jest",
    "cover": "rimraf coverage && rimraf tmp && mkdirp tmp  && jest --coverage",
    "build": "rimraf lib && babel --presets es2015 --plugins transform-runtime src --out-dir lib --source-maps",
    "watch": "rimraf lib && babel --presets es2015 --plugins transform-runtime src --watch --out-dir lib --source-maps",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "babel-runtime": "^6.3.19",
    "istanbul": "^0.4.4",
    "minimatch": "^3.0.2",
    "source-map": ">=0.5.6"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "codecov.io": "0.1.6",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.7.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.0.1",
    "istanbul": "^0.4.4",
    "jest": "^17.0.3",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.4.4"
  },
  "jest": {
    "testPathDirs": [
      "src"
    ]
  }
}
